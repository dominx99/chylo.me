{% extends 'layout.twig' %}

{% block content %}
    <h1 class="text-center text-white anton ls-1 fw-700">Umiejętności</h1>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="card">
                    <h4 class="card-header text-center">Frontend</h4>
                    <ul class="card-body ul-skills">
                        {% for skill in data.skills.frontend %}
                            <li>
                                <span>{{skill.name}}</span>
                                <div>
                                    {% for i in 1..5 %}
                                        <span class="fas fa-star{{skill.rate >= i ? '' : ' star-empty'}}"></span>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-6 wow fadeInRight" data-wow-delay="0.2s">
                <div class="card">
                    <h4 class="card-header text-center">Backend</h4>
                    <ul class="card-body ul-skills">
                        {% for skill in data.skills.backend %}
                            <li>
                                <span>{{skill.name}}</span>
                                <div>
                                    {% for i in 1..5 %}
                                        <span class="fas fa-star{{skill.rate >= i ? '' : ' star-empty'}}"></span>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
